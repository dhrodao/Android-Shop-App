<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/landingFragment"
        android:name="com.dhrodao.androidshop.landing.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/action_landingFragment_to_fruitShopFragment"
            app:destination="@id/fruitShopFragment" />
        <action
            android:id="@+id/action_landingFragment_to_chatFragment2"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_landingFragment_to_sentMessagesFragment"
            app:destination="@id/sentMessagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/fruitShopFragment"
        android:name="com.dhrodao.androidshop.fruitshop.FruitShopFragment"
        android:label="fragment_fruit_shop"
        tools:layout="@layout/fragment_fruit_shop" >
        <action
            android:id="@+id/action_fruitShopFragment_to_landingFragment"
            app:destination="@id/landingFragment" />
        <action
            android:id="@+id/action_fruitShopFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
        <action
            android:id="@+id/action_fruitShopFragment_to_chatFragment2"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dhrodao.androidshop.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_landingFragment"
            app:destination="@id/landingFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.dhrodao.androidshop.productdetails.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" >
        <action
            android:id="@+id/action_productDetailsFragment_to_fruitShopFragment"
            app:destination="@id/fruitShopFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/fruitShopFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.dhrodao.androidshop.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/sentMessagesFragment"
        android:name="com.dhrodao.androidshop.sentmessages.SentMessagesFragment"
        android:label="SentMessagesFragment" >
        <action
            android:id="@+id/action_sentMessagesFragment_to_landingFragment"
            app:destination="@id/landingFragment" />
    </fragment>
</navigation>